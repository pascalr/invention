<%= form_with(model: jar, local: true) do |form| %>
  <% if jar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(jar.errors.count, "error") %> prohibited this jar from being saved:</h2>

      <ul>
        <% jar.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :jar_id %>
    <%= form.number_field :jar_id %>
  </div>

  <div class="field">
    <%= form.label :jar_format_id %>
    <%= form.collection_select(:jar_format_id, JarFormat.order('name ASC').all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :ingredient_id %>
    <%= form.collection_select(:ingredient_id, Ingredient.order('name ASC').all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :location_id %>
    <%= form.number_field :location_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
