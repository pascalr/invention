<h1>Mode manuel</h1>

<button <%= onclick_heda_cmd('H') %>>🏠</button>
<button <%= onclick_heda_cmd('s') %> style="color: red;">Stop</button>

<%= form_with(url: heda_run_path, method: "post") do %>
  <%= label_tag(:cmd, "Commande:") %>
  <%= text_field_tag(:cmd) %>
  <%= submit_tag("Executer") %>
<% end %>

<%= render_async heda_status_path, interval: 2000 %>
