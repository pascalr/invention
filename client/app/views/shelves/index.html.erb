<h2>List of shelves</h2>
 
<table>
  <tr>
    <th>Id</th>
    <th>Height</th>
    <th>Width</th>
    <th>Depth</th>
    <th>Moving height</th>
    <th>Locations</th>
    <th></th>
    <th></th>
  </tr>
 
  <tr>
    <td>(mm)</td>
    <td>(mm)</td>
    <td>(mm)</td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  <% (@shelves || []).each do |shelf| %>
    <tr>
      <td><%= shelf.id %></td>
      <td><%= shelf.height %></td>
      <td><%= shelf.width %></td>
      <td><%= shelf.depth %></td>
      <td><%= shelf.moving_height %></td>
      <td>
        <%= content_tag "div", class: "drawing_location", data: {shelf: shelf, locations: shelf.locations, jars: shelf.locations.map {|e| e.jar}} do %>
        <% end %>
      </td>
      <td><%= link_to 'éditer', edit_shelf_path(shelf) %></td>
      <td><%= link_to 'supprimer', shelf_path(shelf), method: :delete, data: { confirm: 'Êtes-vous sure du vouloir supprimer?' }%></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add shelf', new_shelf_path %>

<%= render "menus/location_context_menu" %>

<%= javascript_pack_tag 'two' %>
<%= javascript_pack_tag 'draw_locations' %>
