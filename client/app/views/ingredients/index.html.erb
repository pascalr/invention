<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Nom</th>
      <th>Aliment</th>
      <th>Coût<br/>$</th>
      <th>Quantité</th>
      <th>Unité</th>
      <th>Densité<br/>(g/mL)</th>
      <th>Code</th>
      <th>Ext</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.id %></td>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.aliment_id %></td>
        <td><%= ingredient.cost %></td>
        <td><%= ingredient.quantity %></td>
        <td><%= ingredient.unit_name %></td>
        <td><%= ingredient.density %></td>
        <td><%= ingredient.code %></td>
        <td><%= check_box_tag :is_external, true, ingredient.is_external, disabled: true %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path %>
