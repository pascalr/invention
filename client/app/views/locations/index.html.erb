<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>X</th>
      <th>Z</th>
      <th>Move command</th>
      <th>Shelf</th>
      <th>Diameter</th>
      <th>Jar format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.x %></td>
        <td><%= location.z %></td>
        <td><%= location.move_command %></td>
        <td><%= location.shelf_id %></td>
        <td><%= location.diameter %></td>
        <td><%= location.jar_format.name %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

